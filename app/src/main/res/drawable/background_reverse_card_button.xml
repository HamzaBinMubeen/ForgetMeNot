<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/background_card_editor_toolbar" />
            <stroke
                    android:width="1dp"
                    android:color="@color/divider" />
        </shape>
    </item>
    <item
            android:bottom="12dp"
            android:drawable="@drawable/ic_reverse_dark_24dp"
            android:left="12dp"
            android:right="12dp"
            android:top="12dp" />
    <item>
        <ripple xmlns:tools="http://schemas.android.com/tools"
                android:color="@color/colorControlHighlight"
                tools:targetApi="lollipop">

            <item android:id="@android:id/mask">
                <shape android:shape="oval">
                    <solid android:color="#000" />
                </shape>
            </item>

        </ripple>
    </item>
</layer-list>