<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        android:orientation="vertical"
        tools:background="@drawable/background_popup_dark">

    <TextView
            android:id="@+id/timerPopupTitleTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:drawablePadding="8dp"
            android:text="@string/popup_title_timer"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:drawableStartCompat="@drawable/ic_round_timer_24"
            app:drawableTint="@color/ticking_timer_icon_on_popup" />

    <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:background="@color/divider_light" />

    <TextView
            android:id="@+id/timerDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:maxWidth="250dp"
            android:textColor="@color/description_text_on_popup"
            android:textSize="14sp"
            tools:text="7 sec." />

    <com.google.android.material.button.MaterialButton
            android:id="@+id/stopTimerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/nunito_extrabold"
            android:padding="16dp"
            android:text="@string/text_stop_timer_button"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:backgroundTint="@color/background_item_selected_on_dark_popup"
            app:cornerRadius="4dp"
            app:rippleColor="@android:color/white" />

    <Space
            android:layout_width="0dp"
            android:layout_height="8dp" />

</LinearLayout>