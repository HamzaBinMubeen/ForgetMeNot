<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:fitsSystemWindows="true">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:id="@+id/drawerColumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="24dp"
                android:paddingBottom="24dp">

            <TextView
                    android:id="@+id/appNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:text="@string/app_name"
                    android:textColor="@color/text_drawer_item"
                    android:textSize="24sp"
                    android:textStyle="bold" />

            <View
                    android:id="@+id/appNameDivider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="@color/text_drawer_item" />

            <LinearLayout
                    android:id="@+id/decksDrawerItem"
                    style="@style/DrawerItem">

                <View style="@style/DrawerIndicator" />

                <ImageView
                        android:id="@+id/decksIcon"
                        style="@style/DrawerItemIcon"
                        android:contentDescription="@string/drawer_item_decks"
                        app:srcCompat="@drawable/ic_round_view_carousel_24" />

                <TextView
                        android:id="@+id/decksTextView"
                        style="@style/DrawerItemText"
                        android:text="@string/drawer_item_decks"
                        android:textSize="20sp"
                        android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/deckGroupsDrawerItem"
                    style="@style/DrawerItem">

                <View style="@style/DrawerIndicator" />

                <ImageView
                        android:id="@+id/deckGroupsIcon"
                        style="@style/DrawerItemIcon"
                        android:contentDescription="@string/drawer_item_deck_groups"
                        app:srcCompat="@drawable/ic_round_group_work_24" />

                <TextView
                        android:id="@+id/deckGroupsTextView"
                        style="@style/DrawerItemText"
                        android:text="@string/drawer_item_deck_groups" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/statisticsDrawerItem"
                    style="@style/DrawerItem">

                <View style="@style/DrawerIndicator" />

                <ImageView
                        android:id="@+id/statisticsIcon"
                        style="@style/DrawerItemIcon"
                        android:contentDescription="@string/drawer_item_statistics"
                        app:srcCompat="@drawable/ic_round_emoji_events_24" />

                <TextView
                        android:id="@+id/statisticsTextView"
                        style="@style/DrawerItemText"
                        android:text="@string/drawer_item_statistics" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/settingsDrawerItem"
                    style="@style/DrawerItem">

                <View style="@style/DrawerIndicator" />

                <ImageView
                        android:id="@+id/settingsIcon"
                        style="@style/DrawerItemIcon"
                        android:contentDescription="@string/drawer_item_settings"
                        app:srcCompat="@drawable/ic_round_settings_24" />

                <TextView
                        android:id="@+id/settingsTextView"
                        style="@style/DrawerItemText"
                        android:text="@string/drawer_item_settings" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/supportAppDrawerItem"
                    style="@style/DrawerItem">

                <View style="@style/DrawerIndicator" />

                <ImageView
                        android:id="@+id/supportAppIcon"
                        style="@style/DrawerItemIcon"
                        android:contentDescription="@string/drawer_item_support_app"
                        app:srcCompat="@drawable/ic_round_grade_24" />

                <TextView
                        android:id="@+id/supportAppTextView"
                        style="@style/DrawerItemText"
                        android:text="@string/drawer_item_support_app" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/helpDrawerItem"
                    style="@style/DrawerItem">

                <View style="@style/DrawerIndicator" />

                <ImageView
                        android:id="@+id/helpIcon"
                        style="@style/DrawerItemIcon"
                        android:contentDescription="@string/drawer_item_help"
                        app:srcCompat="@drawable/ic_round_help_24" />

                <TextView
                        android:id="@+id/helpTextView"
                        style="@style/DrawerItemText"
                        android:text="@string/drawer_item_help" />

            </LinearLayout>

            <LinearLayout
                    android:id="@+id/aboutDrawerItem"
                    style="@style/DrawerItem">

                <View style="@style/DrawerIndicator" />

                <ImageView
                        android:id="@+id/aboutIcon"
                        style="@style/DrawerItemIcon"
                        android:contentDescription="@string/drawer_item_about"
                        app:srcCompat="@drawable/ic_round_work_24" />

                <TextView
                        android:id="@+id/aboutTextView"
                        style="@style/DrawerItemText"
                        android:text="@string/drawer_item_about" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>