<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/homeFragmentContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="presentation.screen.home.HomeFragment">

    <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            app:elevation="0dp">

        <LinearLayout
                android:id="@+id/searchFrame"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/background_search_frame"
                android:descendantFocusability="beforeDescendants"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_scrollFlags="scroll|enterAlways">

            <ImageButton
                    android:id="@+id/drawerButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ripple_borderless_colored"
                    android:contentDescription="@string/description_drawer_button"
                    app:srcCompat="@drawable/ic_drawer_colored" />

            <EditText
                    android:id="@+id/searchEditText"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="@string/hint_search_edittext"
                    android:imeOptions="actionNone"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />

            <ImageButton
                    android:id="@+id/pasteButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ripple_borderless_colored"
                    android:contentDescription="@string/description_paste_button"
                    app:srcCompat="@drawable/ic_paste_colored" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/headline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="12dp"
                android:paddingEnd="12dp">

            <TextView
                    android:id="@+id/deckListTitleTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/jura"
                    android:maxLines="3"
                    android:textColor="@color/text_color_deck_list_title"
                    android:textSize="24sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/addCardsButton"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="@string/deck_list_title_decks_available_for_exercise" />

            <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.55" />

            <TextView
                    android:id="@+id/addCardsButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_add_cards_button"
                    android:drawablePadding="2dp"
                    android:fontFamily="@font/jura"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingTop="6dp"
                    android:paddingEnd="20dp"
                    android:paddingBottom="6dp"
                    android:text="@string/text_add_cards_button"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    app:drawableStartCompat="@drawable/ic_add_colored"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="@id/guideline"
                    app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/searchTabLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tabIndicator="@drawable/tab_indicator"
                    app:tabIndicatorColor="@color/colorAccent"
                    app:tabMode="scrollable"
                    app:tabSelectedTextColor="@color/colorAccent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
                android:id="@+id/selectionToolbar"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@color/colorAccent"
                android:elevation="4dp"
                android:orientation="horizontal"
                android:visibility="gone"
                app:layout_scrollFlags="noScroll"
                tools:visibility="visible">

            <ImageButton
                    android:id="@+id/cancelSelectionButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ripple_light_borderless"
                    android:contentDescription="@string/description_cancel_selection"
                    app:srcCompat="@drawable/ic_round_clear_24" />

            <TextView
                    android:id="@+id/numberOfSelectedDecksTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_bold"
                    android:maxLines="1"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    tools:text="43 decks" />

            <ImageButton
                    android:id="@+id/selectAllButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ripple_light_borderless"
                    android:contentDescription="@string/description_select_all"
                    app:srcCompat="@drawable/ic_round_select_all_24" />

            <ImageButton
                    android:id="@+id/removeDecksButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ripple_light_borderless"
                    android:contentDescription="@string/description_remove_decks"
                    app:srcCompat="@drawable/ic_round_delete_outline_24" />

            <ImageButton
                    android:id="@+id/selectionOptionsButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ripple_light_borderless"
                    android:contentDescription="@string/description_more_options"
                    android:visibility="gone"
                    app:srcCompat="@drawable/ic_round_more_vert_24"
                    tools:visibility="visible" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/homePager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:layout="@layout/fragment_deck_list" />

    <LinearLayout
            android:id="@+id/bottomButtonsRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            app:layout_behavior="com.odnovolov.forgetmenot.presentation.common.MoveUpwardBehavior">

        <com.google.android.material.button.MaterialButton
                android:id="@+id/autoplayButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_extrabold"
                android:gravity="center"
                android:outlineAmbientShadowColor="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorAccent"
                android:stateListAnimator="@animator/material_button"
                android:text="@string/text_autoplay_button"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="16sp"
                app:backgroundTint="@android:color/white"
                app:cornerRadius="16dp"
                app:icon="@drawable/ic_play"
                app:iconGravity="textStart"
                app:iconPadding="2dp"
                app:iconSize="16dp"
                app:iconTint="@color/colorAccent"
                app:rippleColor="@color/colorAccent"
                app:strokeColor="@color/colorAccent"
                app:strokeWidth="2dp" />

        <com.google.android.material.button.MaterialButton
                android:id="@+id/exerciseButton"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"
                android:fontFamily="@font/nunito_extrabold"
                android:gravity="center"
                android:outlineAmbientShadowColor="@color/colorAccent"
                android:outlineSpotShadowColor="@color/colorAccent"
                android:stateListAnimator="@animator/material_button"
                android:text="@string/text_exercise_button"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:backgroundTint="@color/colorAccent"
                app:cornerRadius="16dp" />

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
            android:id="@+id/addDeckFragment"
            android:name="com.odnovolov.forgetmenot.presentation.screen.home.adddeck.AddDeckFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tag="AddDeckFragment" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>