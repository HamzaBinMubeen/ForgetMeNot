<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.fragment.app.FragmentContainerView
                android:id="@+id/presetFragmentView"
                android:name="com.odnovolov.forgetmenot.presentation.common.preset.PresetFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:tag="IntervalScheme Preset Tag"
                app:layout_constrainedWidth="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:layout="@layout/fragment_preset" />

        <TextView
                android:id="@+id/unsatisfactoryLevelOfKnowledgeTextView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_level_of_knowledge_unsatisfactory"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/text_level_of_knowledge"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/presetFragmentView" />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/intervalsRecyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layoutManager="LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/unsatisfactoryLevelOfKnowledgeTextView"
                tools:listitem="@layout/item_interval" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/addIntervalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/removeIntervalButton"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/intervalsRecyclerView"
                app:srcCompat="@drawable/ic_add_white_24dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/removeIntervalButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/addIntervalButton"
                app:layout_constraintTop_toBottomOf="@id/intervalsRecyclerView"
                app:srcCompat="@drawable/ic_remove_white_24dp" />

        <androidx.constraintlayout.widget.Group
                android:id="@+id/intervalsEditionGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible"
                app:constraint_referenced_ids="unsatisfactoryLevelOfKnowledgeTextView,intervalsRecyclerView,addIntervalButton,removeIntervalButton"
                tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>