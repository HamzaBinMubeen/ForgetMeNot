<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.odnovolov.forgetmenot.presentation.screen.exercise.ExerciseFragment">

    <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/exerciseViewPager"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/controlPanel"/>

    <View
            android:id="@+id/controlPanel"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
    </View>

    <ImageButton
            android:id="@+id/notAskButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/description_not_ask_button"
            app:srcCompat="@drawable/ic_delete_white_24dp"
            app:layout_constraintTop_toTopOf="@+id/controlPanel"
            app:layout_constraintBottom_toBottomOf="@+id/controlPanel"
            app:layout_constraintStart_toStartOf="@+id/controlPanel"/>

    <ImageButton
            android:id="@+id/undoButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/description_undo_button"
            app:srcCompat="@drawable/ic_undo_white_24dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="@+id/controlPanel"
            app:layout_constraintBottom_toBottomOf="@+id/controlPanel"
            app:layout_constraintStart_toStartOf="@+id/controlPanel"/>

</androidx.constraintlayout.widget.ConstraintLayout>