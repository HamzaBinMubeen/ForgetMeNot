<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/nav_graph"
        app:startDestination="@+id/home_screen">

    <fragment
            android:id="@+id/home_screen"
            android:name="com.odnovolov.forgetmenot.presentation.screen.home.HomeFragment"
            android:label="@string/app_name"
            tools:layout="@layout/fragment_home">

        <action
                android:id="@+id/action_home_screen_to_exercise_screen"
                app:destination="@id/exercise_screen" />

        <action
                android:id="@+id/action_home_screen_to_repetition_screen"
                app:destination="@id/repetition_screen" />

        <action
                android:id="@+id/action_home_screen_to_deck_settings_screen"
                app:destination="@id/deck_settings_screen" />

        <action
                android:id="@+id/action_home_screen_to_settings_screen"
                app:destination="@id/settings_screen" />

    </fragment>

    <fragment
            android:id="@+id/exercise_screen"
            android:name="com.odnovolov.forgetmenot.presentation.screen.exercise.ExerciseFragment"
            android:label="@string/label_exercise_screen"
            tools:layout="@layout/fragment_exercise">

        <action
                android:id="@+id/action_exercise_screen_to_edit_card_screen"
                app:destination="@id/edit_card_screen" />

    </fragment>

    <fragment
            android:id="@+id/edit_card_screen"
            android:name="com.odnovolov.forgetmenot.presentation.screen.editcard.EditCardFragment"
            android:label="@string/label_edit_card_screen"
            tools:layout="@layout/fragment_edit_card" />

    <fragment
            android:id="@+id/deck_settings_screen"
            android:name="com.odnovolov.forgetmenot.presentation.screen.decksettings.DeckSettingsFragment"
            android:label="@string/label_deck_settings_screen"
            tools:layout="@layout/fragment_deck_settings">

        <action
                android:id="@+id/action_deck_settings_screen_to_pronunciation_screen"
                app:destination="@id/pronunciation_screen" />

        <action
                android:id="@+id/action_deck_settings_screen_to_intervals_screen"
                app:destination="@id/intervals_screen" />

    </fragment>

    <fragment
            android:id="@+id/pronunciation_screen"
            android:name="com.odnovolov.forgetmenot.screen.pronunciation.PronunciationFragment"
            android:label="@string/label_pronunciation_screen"
            tools:layout="@layout/fragment_pronunciation" />

    <fragment
            android:id="@+id/intervals_screen"
            android:name="com.odnovolov.forgetmenot.screen.intervals.IntervalsFragment"
            android:label="@string/label_intervals_screen"
            tools:layout="@layout/fragment_intervals" />

    <fragment
            android:id="@+id/settings_screen"
            android:name="com.odnovolov.forgetmenot.screen.settings.SettingsFragment"
            android:label="@string/label_settings_screen"
            tools:layout="@layout/fragment_settings">

        <action
                android:id="@+id/action_settings_screen_to_walking_mode_settings_screen"
                app:destination="@+id/walking_mode_settings_screen" />

    </fragment>

    <fragment
            android:id="@+id/walking_mode_settings_screen"
            android:name="com.odnovolov.forgetmenot.screen.walkingmodesettings.WalkingModeSettingsFragment"
            android:label="@string/label_walking_mode_settings_screen"
            tools:layout="@layout/fragment_walking_mode_settings" />

    <fragment
            android:id="@+id/repetition_screen"
            android:name="com.odnovolov.forgetmenot.screen.repetition.view.RepetitionFragment"
            android:label="@string/label_repetition_screen"
            tools:layout="@layout/fragment_repetition" />

</navigation>