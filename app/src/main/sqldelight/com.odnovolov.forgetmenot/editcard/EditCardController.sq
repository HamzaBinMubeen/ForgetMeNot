setQuestion:
UPDATE TempEditCardState SET question = ?;

setAnswer:
UPDATE TempEditCardState SET answer = ?;

reverseQuestionAndAnswer:
UPDATE TempEditCardState SET question = answer, answer = question;

updateCard:
UPDATE Card
SET question = (SELECT question FROM TempEditCardState),
    answer = (SELECT answer FROM TempEditCardState)
WHERE id == (SELECT cardId FROM TempCurrentExerciseCard);