setIntervalNumber:
UPDATE TempModifyIntervalState SET intervalNumber = ?;

setIntervalUnit:
UPDATE TempModifyIntervalState SET intervalUnit = ?;

updateInterval:
UPDATE Interval
SET value = (SELECT intervalNumber||' '||intervalUnit FROM TempModifyIntervalState)
WHERE id == (SELECT intervalId FROM TempModifyIntervalState)
      AND (SELECT intervalNumber FROM TempModifyIntervalState) > 0;