getQuestion:
SELECT question FROM Card WHERE id = ?;

getAnswer:
SELECT answer FROM Card WHERE id = ?;

isAnswered:
SELECT CASE WHEN isAnswerCorrect IS NULL THEN 0 ELSE 1 END FROM ExerciseCardStates WHERE cardId = ?;

isAnswerCorrect:
SELECT isAnswerCorrect FROM ExerciseCardStates WHERE cardId = ?;

isLearned:
SELECT isLearned FROM Card WHERE id = ?;